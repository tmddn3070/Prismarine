     }
 
     public boolean causeFallDamage(float fallDistance, float damageMultiplier, DamageSource damageSource) {
@@ -2197,6 +2198,13 @@ public abstract class Entity implements Nameable, EntityAccess, CommandSource, i
                 nbt.putBoolean("Paper.FreezeLock", true);
             }
             // Paper end
+            // Prismarine start - Purpur PR
+            // Purpur start
+            if (immuneToFire != null) {
+                nbt.putBoolean("Purpur.FireImmune", immuneToFire);
+            }
+            // Purpur end
+            // Prismarine end
             return nbt;
         } catch (Throwable throwable) {
             CrashReport crashreport = CrashReport.forThrowable(throwable, "Saving entity NBT");
@@ -2368,6 +2376,13 @@ public abstract class Entity implements Nameable, EntityAccess, CommandSource, i
